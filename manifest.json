{
  "manifest_version": 3,
  "version": "1.0",
  "name": "gupy-job-info",
  "description": "An Extension.js template using web technologies. This template includes a content script.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://portal.gupy.io/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://portal.gupy.io/*"
      ],
      "js": [
        "src/content.js",
        "libs/tagify.polyfills.min.js"
      ],
      "css": [
        "libs/tagify.css"
      ]
    }
  ],
  "icons": {
    "16": "images/icons/icon_16.png",
    "48": "images/icons/icon_48.png"
  }
}
